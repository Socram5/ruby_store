<%= form_for @category do |f|  -%>
	<% if @category.errors.any? %>
	<ul>
	  <% @category.errors.full_messages.each do |msg| %>
	    <li><%= msg %></li>
	  <% end %>
	</ul>
	<% end %>

	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :status %>
		<%= f.check_box :status %>
	</p>

	<%= f.submit -%>

<% end -%>