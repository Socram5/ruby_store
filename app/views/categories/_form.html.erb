<%= simple_form_for @category, :html => { :class => 'form-vertical' } do |f| %>
  <%= f.input :name %>
  <%= f.input :status %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                categories_path, :class => 'btn btn-default' %>
<% end %>
