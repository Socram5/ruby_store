<h1>Categorias</h1>

<%= link_to "Cadastrar", new_category_path %>

<table>
	<thead>
		<tr>
			<th width="20">id</th>
			<th>name</th>
			<th width="200">created_at</th>
			<th width="200">updated_at</th>
			<th width="200">options</th>
		</tr>	
	</thead>
	
	<tbody>
		<% @categories.each do |category| %>
		<tr>
			<td><%= category.id %></td>
			<td><%= category.name %></td>
			<td><%= category.created_at %></td>
			<td><%= category.updated_at %></td>
			<td>
				<%= link_to 'Show', category_path(category.id) %>
				
				| <%= link_to 'Edit', edit_category_path(category.id) %>
				
				| <%= link_to 'Delete', category_path(category.id), method: :delete %>
				
			</td>
		</tr>
		<% end %>
	</tbody>

</table>
