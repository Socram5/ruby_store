<h1>Editar Categoria</h1>

<%= form_tag update_category_path do -%>
	<%= hidden_field_tag :id, nil, value: @category.id %>
	<p>
		<%= label_tag :name %>
		<%= text_field_tag :name, nil, value: @category.name %>
	</p>

	<p>
		<%= label_tag :status %>
		<%= check_box_tag :status, nil, value: @category.status %>
	</p>

	<%= submit_tag 'Cadastrar' -%>

<% end -%>